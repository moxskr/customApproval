{
	"trailingComma": "none",
	"useTabs": true,
	"tabWidth": 4,
	"singleQuote": true,
	"printWidth": 100,
	"plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": {
				"parser": "lwc",
				"useTabs": true,
				"tabWidth": 4
			}
		},
		{
			"files": "*.{cmp,page,component}",
			"options": {
				"parser": "html",
				"useTabs": true,
				"tabWidth": 4
			}
		}
	]
}